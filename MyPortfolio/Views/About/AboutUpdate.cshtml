@model About
@{
    ViewData["Title"] = "AboutUpdate";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Hakkımda</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Hakkımda Güncelleme Sayfası</div>
					</div>
					<div class="card-body">

						<form method="post">
							<input type="hidden" asp-for="AboutId" />
							<label>Başlık</label>
							<input type="text" asp-for="Title" class="form-control" />
							<br />
							<label>Hakkımda Açıklama</label>
							<input type="text" asp-for="SubDescription" class="form-control" />
							<br />
							<label>Hakkımda Detay</label>
							<textarea asp-for="Details" class="form-control" rows="4" ></textarea>
							<br />

							<button class="btn btn-success">Hakkımda Güncelle</button>
						</form>
					</div>
				</div>
			</div>

		</div>
	</div>
</div>

}

