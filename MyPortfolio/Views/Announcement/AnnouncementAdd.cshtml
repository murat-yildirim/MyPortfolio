@using MyPortfolio.DAL.Entities
@model Announcement
@{
    ViewData["Title"] = "AnnouncementAdd";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Duyurular</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Duyuru Ekleme Sayfası</div>
					</div>
					<div class="card-body">

						<form method="post">
							<label>Duyuru Başlığı</label>
							<input type="text" asp-for="Title" class="form-control" />
							<br />
							<label>Duyuru Açıklaması</label>
							<textarea rows="4" asp-for="Description" class="form-control"></textarea>
							<br />
							<label>Duyuru Tarihi</label>
							<input type="text" asp-for="Date" class="form-control" value="@DateTime.Now.ToShortDateString()" />
							
							<br />
							<button class="btn btn-primary">Duyuru Ekle</button>
						</form>
					</div>
				</div>
			</div>

		</div>
	</div>
</div>
