@using MyPortfolio.DAL.Entities
@model ContactMessage
@{
    ViewData["Title"] = "ContactMessageDetail";
    Layout = "~/Views/Layout/Index.cshtml";
}

<input type="hidden" asp-for="ContactMessageID" />

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Mesajlar</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Mesaj Detayları</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Gönderen : <b>@Model.Name</b>
							<br />
							Email :<b>@Model.Mail</b>
							<br />
							Tarih : <b>@Model.SendDate</b>
							<br />
							<br />
							Başlık : <b>@Model.Subject</b>
							<br />
							<br />
							Mesaj : <b>@Model.Message</b>
						</div>

					</div>
				</div>
			</div>

		</div>
	</div>
</div>

