@using MyPortfolio.DAL.Entities
@model List<ContactMessage>
@{
    ViewData["Title"] = "ContactMessageList";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Mesajlar</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">İletişimden Gelen Mesaj Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Gönderen</th>
									<th scope="col">Konu</th>
									<th scope="col">Tarih</th>
									<th scope="col">Mesajı Aç</th>
									<th scope="col">Durum</th>
									<th scope="col">Sil</th>

								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.ContactMessageID</td>
										<td>@item.Name</td>
										<td>@item.Subject</td>
										<td>@item.SendDate.ToShortDateString()</td>
										<td><a href="/ContactMessage/ContactMessageDetail/@item.ContactMessageID" class="btn btn-warning">Mesajı Aç</a></td>
										@if (item.IsRead == true)
										{
											<td><a href="/ContactMessage/ChangeIsReadToFalse/@item.ContactMessageID" class="btn btn-dark">Okunmadı Olarak İşaretle</a></td>

										}
										else
										{
											<td><a href="/ContactMessage/ChangeIsReadToTrue/@item.ContactMessageID" class="btn btn-info">Okundu Olarak İşaretle</a></td>

										}
										<td><a href="/ContactMessage/DeleteMessage/@item.ContactMessageID" class="btn btn-danger">Sil</a></td>
									</tr>
								}

							</tbody>
						</table>
					</div>
				</div>
			</div>

		</div>
	</div>
</div>

