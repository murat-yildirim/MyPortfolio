@using MyPortfolio.DAL.Entities
@model Portfolio
@{
    ViewData["Title"] = "PortfolioUpdate";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Projelerim</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Proje Güncelleme Sayfası</div>
					</div>
					<div class="card-body">

						<form method="post">
							<input type="hidden" asp-for="PortfolioId" />
							<label>Proje Başlığı</label>
							<input type="text" asp-for="Title" class="form-control" />
							<br />
							<label>Tarih</label>
							<input type="text" asp-for="Date" class="form-control" />
							<br />
							
							<label>Proje Resim URL</label>
							<input type="text" asp-for="ImageUrl" class="form-control" />
							<br />
							<label>Proje GitHub URL</label>
							<input type="text" asp-for="Url" class="form-control" />
							<br />
							<button class="btn btn-primary">Proje Güncelle</button>
						</form>
					</div>
				</div>
			</div>

		</div>
	</div>
</div>

