@using MyPortfolio.DAL.Entities
@model User
@{
    ViewData["Title"] = "ProfilNewPassword";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Profil Güncelleme</h4>
		
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Profil Güncelleme</div>
					</div>
					<div class="card-body">

						<form method="post">
							@if (TempData["SuccessMessage"] != null)
							{
								<div class="alert alert-success">
									@TempData["SuccessMessage"]
								</div>
							}
							@if (!ViewContext.ViewData.ModelState.IsValid)
							{
								<div class="alert alert-danger">
									@Html.ValidationSummary(true, "", new { @class = "text-success" })
								</div>
							}
							<label>Yeni Şifre</label>
							<input type="password" asp-for="Password" class="form-control" required />
							<br />
							<label>Yeni Şifre Tekrar</label>
							<input type="password" asp-for="PasswordAgain" class="form-control" required />
							<br />

							<button class="btn btn-primary">Güncelle</button>
						</form>
					</div>
				</div>
			</div>

		</div>
	</div>
</div>

