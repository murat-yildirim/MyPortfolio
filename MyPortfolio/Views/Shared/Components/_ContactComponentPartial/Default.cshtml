@model List< MyPortfolio.DAL.Entities.Contact>


<section id="contact" class="s-contact target-section">

    <div class="overlay"></div>

    <div class="row narrow section-intro">
        <div class="col-full">
            <h3>İletişim</h3>
            <h1>@ViewBag.contactTitle</h1>

            <p class="lead">@ViewBag.contactDescription</p>
        </div>
    </div>
    
    <div class="row contact__main">
        <div class="col-eight tab-full contact__form">
           
          
         @*    @await Component.InvokeAsync("_ContactMessageComponentPartial") *@
            @await Html.PartialAsync("/Views/ContactMessage/ContactMessageSend.cshtml")

            <!-- contact-warning -->
            <div class="message-warning">
                Something went wrong. Please try again.
            </div>

            <!-- contact-success -->
            <div class="message-success">
                Your message was sent, thank you!<br>
            </div>

        </div>
        
        <div class="col-four tab-full contact__infos">
            @foreach (var item in Model)
            {
            <h4 class="h06">TELEFON</h4>
            <p>
                Telefon: @item.Phone1<br>
                Mobile: @item.Phone2<br>
                
            </p>

            <h4 class="h06">E POSTA</h4>
            <p>
                @item.Email1<br>
                @item.Email2
            </p>

            <h4 class="h06">ADRES</h4>
            <p>
                @item.Address
            </p>
            }
        </div>
        
    </div>

</section>