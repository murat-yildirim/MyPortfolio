@using MyPortfolio.DAL.Entities
@model SocialMedia
@{
    ViewData["Title"] = "SocialMediaUpdate";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Sosyal Medya</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Sosyal Medya Güncelleme Sayfası</div>
					</div>
					<div class="card-body">

						<form method="post">
							<input type="hidden" asp-for="SocialMediaId" />
							<label>Sosyal Medya Başlığı</label>
							<input type="text" asp-for="Title" class="form-control" />
							<br />
							<label>Sosyal Medya URL</label>
							<input type="text" asp-for="Url" class="form-control" />
							<br />

							<label>Sosyal Medya Icon</label>
							<input type="text" asp-for="Icon" class="form-control" />
							<br />
							
							<button class="btn btn-primary">Sosyal Medya Güncelle</button>
						</form>
					</div>
				</div>
			</div>

		</div>
	</div>
</div>

