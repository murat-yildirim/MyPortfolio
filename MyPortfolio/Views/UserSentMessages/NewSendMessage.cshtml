@using MyPortfolio.DAL.Entities
@model Message

@{
    ViewData["Title"] = "NewSendMessage";
    Layout = "~/Views/Layout/Index.cshtml";
}



<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Yeni Mesaj Gönder</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Yeni Mesaj Gönder</div>
					</div>
					<div class="card-body">

						<form method="post">
							<label>Konu</label>
							<input type="text" asp-for="Subject" class="form-control" />
							<br />
							<label>Mesaj</label>
							<input type="text" asp-for="MessageDetail" class="form-control" />
							<br />
							<input type="hidden" asp-for="SendDate" class="form-control" />
							


							<button class="btn btn-primary">Gönder</button>
						</form>
					</div>
				</div>
			</div>

		</div>
	</div>
</div>



